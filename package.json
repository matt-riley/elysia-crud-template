{
  "name": "elysia-crud-template",
  "version": "0.1.2",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun src/index.ts",
    "migrate": "bun src/db/migrate.ts",
    "start:migrate": "bun run migrate && bun run start",
    "test": "bun test",
    "lint": "oxlint .",
    "lint:fix": "oxlint . --fix",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "prepare": "husky"
  },
  "dependencies": {
    "@elysiajs/swagger": "1.3.1",
    "drizzle-orm": "0.45.1",
    "elysia": "1.4.19",
    "pg": "8.16.3",
    "pino": "10.1.0"
  },
  "devDependencies": {
    "@types/pg": "8.16.0",
    "bun-types": "1.3.5",
    "drizzle-kit": "0.31.8",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "oxlint": "1.35.0",
    "prettier": "3.7.4",
    "typescript": "5.9.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "oxlint --fix",
      "prettier -w"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier -w"
    ]
  },
  "module": "src/index.js"
}
