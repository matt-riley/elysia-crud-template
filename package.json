{
  "name": "elysia-crud-template",
  "version": "0.0.1",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun src/index.ts",
    "migrate": "bun src/db/migrate.ts",
    "start:migrate": "bun run migrate && bun run start",
    "test": "bun test",
    "lint": "oxlint .",
    "lint:fix": "oxlint . --fix",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "prepare": "husky install"
  },
  "dependencies": {
    "@elysiajs/swagger": "1.3.1",
    "drizzle-orm": "^0.45.0",
    "elysia": "latest",
    "mysql2": "^3.6.3"
  },
  "devDependencies": {
    "bun-types": "latest",
    "drizzle-kit": "^0.31.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "oxlint": "^0.18.0",
    "prettier": "^3.5.2",
    "typescript": "5.9.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "oxlint --fix",
      "prettier -w"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier -w"
    ]
  },
  "module": "src/index.js"
}
